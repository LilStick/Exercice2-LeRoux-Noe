PORT=3000

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/todolist

# PostgreSQL Configuration
PG_USER=your_username
PG_PASSWORD=your_password
PG_HOST=localhost
PG_PORT=5432
PG_DATABASE=todolist

# Database Mode: 'mongodb', 'postgresql', or 'both'
# - mongodb: Use MongoDB only
# - postgresql: Use PostgreSQL only
# - both: Synchronize data across both databases (default)
DATABASE_MODE=both

# JWT Authentication
# IMPORTANT: Change JWT_SECRET to a strong, random value in production!
# Generate a secure secret with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your_super_secret_key_change_this_in_production_minimum_32_characters
JWT_EXPIRES_IN=1h

# Session Secret for OAuth
# IMPORTANT: Change SESSION_SECRET to a strong, random value in production!
SESSION_SECRET=your_session_secret_change_this_in_production

# OAuth 2.0 Configuration - Google
# Get credentials from: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=your_google_client_id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_CALLBACK_URL=http://localhost:3000/oauth/google/callback
